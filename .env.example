# Gemini API Configuration
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# REPL Configuration
REPL_PROMPT="> "
REPL_SESSION_DIR=.sessions
REPL_HISTORY_FILE=.gemini_history
REPL_MAX_HISTORY=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/gemini-repl.log
LOG_FORMAT=json

# Tool Configuration
TOOLS_ENABLED=true
TOOLS_SANDBOX_DIR=workspace
TOOLS_MAX_FILE_SIZE=1048576

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=1000000

# Development
DEBUG=false
COLOR_OUTPUT=true