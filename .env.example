# Gemini REPL Environment Variables Example
# Copy this file to .env and fill in your values

# === API Configuration ===
# Required: Your Gemini API Key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-api-key-here

# Model selection (default: gemini-1.5-flash)
# Available models: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp
GEMINI_MODEL=gemini-1.5-flash

# Custom API endpoint (for testing/proxies)
# GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# === REPL Configuration ===
REPL_PROMPT="> "
REPL_SESSION_DIR=.sessions
REPL_HISTORY_FILE=.gemini_history
REPL_MAX_HISTORY=1000

# === Logging Configuration ===
# Rust log level (error, warn, info, debug, trace)
RUST_LOG=gemini_repl=info
LOG_FILE=logs/gemini-repl.log
LOG_FORMAT=json

# === Tool Configuration ===
TOOLS_ENABLED=true
TOOLS_SANDBOX_DIR=workspace
TOOLS_MAX_FILE_SIZE=1048576

# === Rate Limiting ===
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=1000000

# === Request Configuration ===
GEMINI_TIMEOUT_MS=30000
GEMINI_MAX_TOKENS=2048

# === Development ===
DEBUG=false
COLOR_OUTPUT=true
RUST_BACKTRACE=1
NOOP_MODE=false

# === API Logging ===
# Enable logging of API requests/responses to JSONL files
# GEMINI_API_LOGGING=true
# GEMINI_LOG_DIR=logs

# === Proxy Configuration (Optional) ===
# HTTP_PROXY=http://localhost:3129
# HTTPS_PROXY=http://localhost:3129
# NO_PROXY=localhost,127.0.0.1